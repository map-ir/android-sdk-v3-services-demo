<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationMapRoute" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colors -->
        <item name="routeColor">@color/mapir_layer_blue</item>
        <item name="routeModerateCongestionColor">
            @color/mapir_layer_congestion_yellow
        </item>
        <item name="routeSevereCongestionColor">
            @color/mapir_layer_congestion_red
        </item>
        <item name="routeShieldColor">@color/mapir_shield_layer_color</item>

        <!-- Scales -->
        <item name="routeScale">1.0</item>
        <item name="upcomingManeuverArrowColor">
            @color/mapir_upcoming_maneuver_arrow_color
        </item>
        <item name="upcomingManeuverArrowBorderColor">
            @color/mapir_upcoming_maneuver_arrow_border_color
        </item>
    </style>

</resources>
